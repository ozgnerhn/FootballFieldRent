<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".View.NewMember">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="220dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/adduser"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:background="#11000000"
        android:ems="10"
        android:textColor="#ffffff"
        android:inputType="textPersonName"
        android:textColorHint="@android:color/background_light"
        android:hint="Ad Soyad"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etUserName"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_marginTop="300dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Kulanıcı Adı"
        android:inputType="none"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/background_light"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_marginBottom="257dp"
        android:layout_marginTop="350dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="E-Mail"
        android:inputType="textEmailAddress"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/background_light"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_marginTop="400dp"
        android:background="#11000000"
        android:ems="10"
        android:textColor="#ffffff"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:textColorHint="@android:color/background_light"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageView"
        android:layout_marginTop="450dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Telefon"
        android:inputType="phone"
        android:textColor="#ffffff"
        android:textColorHint="@android:color/background_light"
        android:textSize="16dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvUyeOl"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="68dp"
        app:cardBackgroundColor="@android:color/background_dark"
        app:cardCornerRadius="25dp"
        app:cardElevation="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="9dp"
                android:text="Üye Ol"
                android:textColor="#fff"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="monospace"
                app:fontFamily="sans-serif-smallcaps" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <CheckBox
        android:id="@+id/isOwner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/etUserName"
        android:layout_marginBottom="123dp"
        android:text="Halı Saha Sahibiyim."
        android:textColor="@android:color/background_light"
        android:textColorHint="@android:color/background_light" />

</RelativeLayout>